{
    "manifest_version": 2,

    "name": "Links4All",
    "description": "share links and content browser extension",
    "version": "0.1",

    "permissions": [
        "webRequest",
        "storage",
        "activeTab",
        "tabs",
        "<all_urls>"
    ],

    "browser_action": {
        "default_icon": "resourse/share.png",
        "default_popup": "resourse/popup.html"
    },

    },
    "background": {
        "scripts": [
            "chrome_ex_oauth.js",
            "chrome_ex_oauthsimple.js",
            "js/index.js"
        ]
    }
}
